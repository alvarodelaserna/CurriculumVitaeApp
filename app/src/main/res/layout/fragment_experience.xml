<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.asm.curriculumvitaeapp.fragments.ExperienceFragment">

    <ImageButton
        android:id="@+id/logo_tapap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/button_tapap"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.33"/>

    <ImageButton
        android:id="@+id/logo_progressive"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/button_progressive"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.33"/>

    <ImageButton
        android:id="@+id/logo_technosite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/button_technosite"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.33"/>

</LinearLayout>
