<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asm.curriculumvitaeapp" >

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".core.CurriculumVitaeApp"
        android:allowBackup="true"
        android:icon="@drawable/icon_cv"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PersonalInformationActivity"
            android:label="@string/title_activity_personal_information" >
        </activity>
        <activity
            android:name=".activities.ExperienceActivity"
            android:label="@string/title_activity_experience" >
        </activity>
        <activity
            android:name=".activities.EducationActivity"
            android:label="@string/title_activity_education" >
        </activity>
    </application>

</manifest>
